<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_all"
    tools:context=".SingleQuizActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1B74BA"
        android:titleTextColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.99"
                        android:text="আপনি কিভাবে পরীক্ষা দিতে চান?"
                        android:gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:textSize="22sp"
                        style="@style/MaterialAlertDialog.Material3.Title.Text.CenterStacked"
                        android:textStyle="bold"
                        android:textColor="@color/purple"
                        tools:ignore="NestedWeights" />
                    <View
                        android:layout_width="300dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.01"
                        android:layout_marginBottom="10dp"
                        android:background="@color/material_deep_purple"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:orientation="horizontal"
                        android:clipToPadding="false"
                        android:gravity="center"
                        >


                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="180dp"
                            android:id="@+id/specialExamCardView_Id"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:id="@+id/ll_AllSubject"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:orientation="vertical"
                                android:background="#FFFFFF"
                                android:padding="10dp"
                                android:gravity="center"

                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.6"
                                    android:paddingTop="2dp"
                                    android:src="@drawable/special_exam"
                                    android:background="#53A9ED"

                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="@color/material_deep_purple"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:text="সকল বিষয়ে পরীক্ষা"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:textAppearanceMedium"
                                    />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal"
                        android:clipToPadding="false"
                        android:gravity="center"
                        tools:ignore="NestedWeights">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/quizCardView_Id"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:id="@+id/ll_Bangla"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="#FFFFFF"
                                android:gravity="center"

                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.6"
                                    android:src="@drawable/start_quiz"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="@color/material_deep_purple"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:text="বাংলা"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:textAppearanceMedium"
                                    />


                            </LinearLayout>



                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/hospitalCardView_Id"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:id="@+id/ll_English"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="#FFFFFF"
                                android:gravity="center"

                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:paddingTop="2dp"
                                    android:layout_weight="0.6"
                                    android:src="@drawable/live_quiz"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="@color/material_deep_purple"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:text="ইংরেজি"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:textAppearanceMedium"
                                    />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>




                    <!--Second LinearLayout -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal"
                        android:clipToPadding="false"
                        android:gravity="center"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/airporyCardView_Id"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:id="@+id/ll_Math"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="#FFFFFF"
                                android:gravity="center"

                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.6"
                                    android:src="@drawable/group"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="@color/material_deep_purple"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:text="গণিত"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:textAppearanceMedium"
                                    />


                            </LinearLayout>



                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/restaurantCardView_Id"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:id="@+id/ll_GeneralKnowledge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="#FFFFFF"
                                android:gravity="center"

                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.6"
                                    android:paddingTop="2dp"
                                    android:src="@drawable/leaderboard"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="@color/material_deep_purple"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:text="সাধারণ জ্ঞান"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:textAppearanceMedium"
                                    />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>



    </ScrollView>



</LinearLayout>