<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- শ্যাডো লেয়ার (নিচে) -->
    <item android:right="0dp"
        android:left="0dp"
        android:top="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#40000000" /> <!-- শ্যাডোর রঙ (আংশিক কালো) -->
        </shape>
    </item>

    <!-- মূল বাটনের লেয়ার -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:startColor="#2196F3"
                android:endColor="#7E57C2"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
